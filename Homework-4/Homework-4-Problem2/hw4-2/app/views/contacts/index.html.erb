<h1>All Contacts</h1>

<%= form_tag('/thanks') do %>
	<div>
		<%= label_tag :name_first, "First Name: " %>
		<%= text_field_tag(:name_first, nil, :placeholder => 'First Name', :autofocus=>true) %>
	</div>
	<div>
		<%= label_tag :name_last, "Last Name: " %>
		<%= text_field_tag(:name_last, nil, {:placeholder => 'Last Name'}) %>
	</div>
	<div>
		<%= label_tag :email, "email: " %>
		<%= text_field_tag(:email, nil, {:placeholder => 'email'}) %>
	</div>
	<div>
		<%= label_tag "message", "Message: " %>
		<%= text_field_tag(:message, nil, {:placeholder => 'Message'}) %>
	</div>
	<br>
	<div>
		<%= submit_tag('Save') %>
	</div>


<% end %>
